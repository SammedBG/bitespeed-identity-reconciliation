# ─── Server ─────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─── Database (PostgreSQL) ──────────────────────────────────────────────────
# Local:
DATABASE_URL="postgresql://postgres:password@localhost:5432/bitespeed?schema=public"
# Render (example):
# DATABASE_URL="postgresql://user:pass@host.oregon-postgres.render.com/bitespeed_db"

# ─── Rate Limiting ──────────────────────────────────────────────────────────
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MINUTES=15

# ─── CORS ───────────────────────────────────────────────────────────────────
# Comma-separated origins, or "*" for all
CORS_ORIGIN=*

# ─── Logging ────────────────────────────────────────────────────────────────
# Levels: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
